{
  "manifest_version": 3,
  "name": "Web Thread Reader",
  "version": "0.1.0",
  "description": "Read web page body text and X thread/article text aloud.",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "offscreen"],
  "host_permissions": [
    "<all_urls>",
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Web Thread Reader",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}
